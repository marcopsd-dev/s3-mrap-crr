                  ]
                },
                {
                  "Effect": "Deny",
                  "Action": ["s3:DeleteObject", "s3:DeleteBucket"],
                  "Resource": [
                    { "Fn::GetAtt": ["MainS3Bucket", "Arn"] },
                    { "Fn::Join": ["", [{ "Fn::GetAtt": ["MainS3Bucket", "Arn"] }, "/*"]]}
