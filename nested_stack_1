          "RestrictPublicBuckets": true
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": { "Fn::GetAtt": ["MainS3KmsKey", "Arn"] }
              }
            }
          ]
        },
        "LoggingConfiguration": {
          "DestinationBucketName": { "Ref": "LoggingBucket" },
          "LogFilePrefix": "access-logs-main/"
        }
      }
    },
    "LoggingKmsKey": {
      "Type": "AWS::KMS::Key",
      "Properties": {
        "Description": "KMS key for logging bucket",
        "KeyPolicy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowAdminManagement",
              "Effect": "Allow",
              "Principal": { "AWS": { "Ref": "AdminRoleARN" } },
              "Action": "kms:*",
              "Resource": "*"
            },
            {
              "Sid": "AllowS3LoggingServiceToEncrypt",
              "Effect": "Allow",
