{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Main S3 Bucket + Logging + IAM Role with EventBridge and Admin Management",
  "Parameters": {
    "AdminRoleARN": {
      "Type": "String",
      "Description": "Admin IAM Role ARN used by the parent stack to manage these resources"
    },
    "MainBucketName": {
      "Type": "String",
      "Description": "Name for the main S3 bucket (must be globally unique)",
      "Default": ""
    },
    "LoggingBucketName": {
      "Type": "String",
      "Description": "Name for the logging S3 bucket (must be globally unique)",
      "Default": ""
    }
  },
  "Conditions": {
    "HasMainBucketName": {
      "Fn::Not": [{ "Fn::Equals": [{ "Ref": "MainBucketName" }, ""] }]
    },
    "HasLoggingBucketName": {
      "Fn::Not": [{ "Fn::Equals": [{ "Ref": "LoggingBucketName" }, ""] }]
    }
  },
  "Resources": {
    "MainS3KmsKey": {
      "Type": "AWS::KMS::Key",
      "Properties": {
        "Description": "KMS key for main S3 bucket",
        "EnableKeyRotation": true,
        "KeyPolicy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowRootAccountAccess",
              "Effect": "Allow",
              "Principal": {
                "AWS": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root" }
              },
              "Action": "kms:*",
              "Resource": "*"
            },
            {
              "Sid": "AllowAdminManagement",
              "Effect": "Allow",
              "Principal": { "AWS": { "Ref": "AdminRoleARN" } },
              "Action": "kms:*",
              "Resource": "*"
            }
          ]
        }
      }
    },
    "LoggingBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::If": [
            "HasLoggingBucketName",
            { "Ref": "LoggingBucketName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "ObjectLockEnabled": true,
        "ObjectLockConfiguration": {
          "ObjectLockEnabled": "Enabled",
          "Rule": {
            "DefaultRetention": { "Mode": "COMPLIANCE", "Days": 90 }
          }
        },
        "VersioningConfiguration": { "Status": "Enabled" },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": { "Fn::GetAtt": ["LoggingKmsKey", "Arn"] }
              }
            }
          ]
        }
      }
    },
    "LoggingKmsKey": {
      "Type": "AWS::KMS::Key",
      "Properties": {
        "Description": "KMS key for logging bucket",
        "EnableKeyRotation": true,
        "KeyPolicy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowRootAccountAccess",
              "Effect": "Allow",
              "Principal": {
                "AWS": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root" }
              },
              "Action": "kms:*",
              "Resource": "*"
            },
            {
              "Sid": "AllowAdminManagement",
              "Effect": "Allow",
              "Principal": { "AWS": { "Ref": "AdminRoleARN" } },
              "Action": "kms:*",
              "Resource": "*"
            },
            {
              "Sid": "AllowS3LoggingServiceToEncrypt",
              "Effect": "Allow",
              "Principal": { "Service": "logging.s3.amazonaws.com" },
              "Action": ["kms:Encrypt", "kms:GenerateDataKey"],
              "Resource": "*"
            }
          ]
        }
      }
    },
    "LoggingBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Ref": "LoggingBucket" },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "AllowS3LogDelivery",
              "Effect": "Allow",
              "Principal": { "Service": "logging.s3.amazonaws.com" },
              "Action": ["s3:PutObject", "s3:PutObjectAcl"],
              "Resource": {
                "Fn::Join": [
                  "",
                  [{ "Fn::GetAtt": ["LoggingBucket", "Arn"] }, "/*"]
                ]
              }
            }
          ]
        }
      }
    },
    "MainS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "DependsOn": ["LoggingBucket", "LoggingBucketPolicy"],
      "DeletionPolicy": "Retain",
      "Properties": {
        "BucketName": {
          "Fn::If": [
            "HasMainBucketName",
            { "Ref": "MainBucketName" },
            { "Ref": "AWS::NoValue" }
          ]
        },
        "ObjectLockEnabled": true,
        "ObjectLockConfiguration": {
          "ObjectLockEnabled": "Enabled",
          "Rule": {
            "DefaultRetention": {
              "Mode": "COMPLIANCE",
              "Days": 30
            }
          }
        },
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "NotificationConfiguration": {
          "EventBridgeConfiguration": {
            "EventBridgeEnabled": true
          }
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": { "Fn::GetAtt": ["MainS3KmsKey", "Arn"] }
              }
            }
          ]
        },
        "LoggingConfiguration": {
          "DestinationBucketName": { "Ref": "LoggingBucket" },
          "LogFilePrefix": "access-logs-main/"
        }
      }
    },
    "S3AccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "S3-Access-Role",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "AWS": { "Ref": "AdminRoleARN" } },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "S3ReadWriteNoDelete",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": ["s3:GetObject", "s3:PutObject", "s3:ListBucket"],
                  "Resource": [
                    { "Fn::GetAtt": ["MainS3Bucket", "Arn"] },
                    {
                      "Fn::Join": [
                        "",
                        [{ "Fn::GetAtt": ["MainS3Bucket", "Arn"] }, "/*"]
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "kms:Decrypt",
                    "kms:GenerateDataKey",
                    "kms:DescribeKey"
                  ],
                  "Resource": { "Fn::GetAtt": ["MainS3KmsKey", "Arn"] }
                },
                {
                  "Effect": "Deny",
                  "Action": ["s3:DeleteObject", "s3:DeleteBucket"],
                  "Resource": [
                    { "Fn::GetAtt": ["MainS3Bucket", "Arn"] },
                    {
                      "Fn::Join": [
                        "",
                        [{ "Fn::GetAtt": ["MainS3Bucket", "Arn"] }, "/*"]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "MainS3BucketARN": {
      "Value": { "Fn::GetAtt": ["MainS3Bucket", "Arn"] },
      "Export": { "Name": "MainS3BucketARN" }
    },
    "MainS3BucketName": {
      "Value": { "Ref": "MainS3Bucket" },
      "Export": { "Name": "MainS3BucketName" }
    },
    "LoggingBucketARN": {
      "Value": { "Fn::GetAtt": ["LoggingBucket", "Arn"] },
      "Export": { "Name": "LoggingBucketARN" }
    },
    "LoggingBucketName": {
      "Value": { "Ref": "LoggingBucket" },
      "Export": { "Name": "LoggingBucketName" }
