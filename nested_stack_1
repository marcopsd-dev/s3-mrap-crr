      "Value": { "Fn::GetAtt": ["LoggingKmsKey", "Arn"] },
      "Export": { "Name": "LoggingKmsKeyARN" }
    },
    "S3AccessRoleARN": {
      "Value": { "Fn::GetAtt": ["S3AccessRole", "Arn"] },
      "Export": { "Name": "S3AccessRoleARN" }
    }
